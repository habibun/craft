{% extends '::base.html.twig' %}

{% block title %}Issue{% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-lg-12">
            <div>
                <a class="btn btn-sm btn-success" href="{{ path('issue_new') }}">
                    <i class="icon-plus"></i>
                </a>
                <a class="btn btn-sm btn-info" href="{{ path('issue_edit', {'id' : issue.id}) }}">
                    <i class="icon-pencil"></i>
                </a>
                <a class="btn btn-sm btn-danger btn-delete delete-confirm"
                   href="{{ path('product_delete', {'id' : issue.id}) }}">
                    <i class="icon-trash"></i>
                </a>
            </div>
            <br/>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-7">
            <section class="panel">
                <header class="panel-heading">
                    <strong>Issue - {{ issue.id }}</strong>
                    <span class="tools pull-right">
                        <a class="icon-chevron-down" href="javascript:;"></a>
                        <a class="icon-remove" href="javascript:;"></a>
                    </span>
                </header>
                <div class="panel-body">
                    <table class="table table-striped table-hover">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ issue.id }}</td>
                        </tr>
                        <tr>
                            <th>Issue Date</th>
                            <td>{{ issue.issueDate|date('d-m-Y') }}</td>
                        </tr>
                        <tr>
                            <th>Company</th>
                            <td>{{ issue.company }}</td>
                        </tr>
                        <tr>
                            <th>Depot</th>
                            <td>{{ issue.depot }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>
                                {% if issue.status %}
                                    <span class="label label-inverse">Finalized</span>
                                {% else %}
                                    <span class="label label-warning">Not finalized</span>
                                {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
        <div class="col-lg-5">
            <section class="panel">
                <header class="panel-heading">
                    <strong>Products</strong>
                    <span class="tools pull-right">
                        <a class="icon-chevron-down" href="javascript:;"></a>
                        <a class="icon-remove" href="javascript:;"></a>
                    </span>
                </header>
                <div class="panel-body">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Comment</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for line in lines %}
                            <tr>
                                <td>{{ line.product }}</td>
                                <td>{{ line.quantity }}</td>
                                <td>{{ line.comment }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <div class="well-sm">
                    {% if issue.status %}
                        <a href="{{ path('issue_definalize', { 'id' : issue.id }) }}" class="btn btn-danger">De-Finalize
                            this record</a>
                    {% else %}
                        <a href="{{ path('issue_finalize', { 'id' : issue.id }) }}" class="btn btn-success">Finalize
                            this record</a>
                    {% endif %}
                </div>
            </section>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <span class="pull-right">
                <a class="btn btn-primary" href="{{ path('issue') }}">
                    Back
                </a>
            </span>
        </div>
    </div>
{% endblock %}
