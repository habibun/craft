{% extends '::base.html.twig' %}

{% block title %}Purchase{% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-lg-12">
            <div>
                <a class="btn btn-sm btn-success" href="{{ path('purchase_new') }}">
                    <i class="icon-plus"></i>
                </a>
                <a class="btn btn-sm btn-info" href="{{ path('purchase_edit', {'id' : purchase.id}) }}">
                    <i class="icon-pencil"></i>
                </a>
                <a class="btn btn-sm btn-danger btn-delete delete-confirm" href="{{ path('product_delete', {'id' : purchase.id}) }}">
                    <i class="icon-trash"></i>
                </a>
            </div>
            <br />
        </div>
    </div>
    <div class="row">
        <div class="col-lg-7">
            <section class="panel">
                <header class="panel-heading">
                    <strong>Purchase - {{ purchase.id }}</strong>
                    <span class="tools pull-right">
                        <a class="icon-chevron-down" href="javascript:;"></a>
                        <a class="icon-remove" href="javascript:;"></a>
                    </span>
                </header>
                <div class="panel-body">
                    <table class="table table-striped table-hover">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ purchase.id }}</td>
                        </tr>
                        <tr>
                            <th>Purchase Date</th>
                            <td>{{ purchase.purchaseDate|date('d-m-Y') }}</td>
                        </tr>
                        <tr>
                            <th>Company</th>
                            <td>{{ purchase.company }}</td>
                        </tr>
                        <tr>
                            <th>Depot</th>
                            <td>{{ purchase.depot }}</td>
                        </tr>
                        <tr>
                            <th>Status</th>
                            <td>
                                {% if purchase.status %}
                                    <span class="label label-inverse">Finalized</span>
                                {% else %}
                                    <span class="label label-default">Not finalized</span>
                                {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
        <div class="col-lg-5">
            <section class="panel">
                <header class="panel-heading">
                    <strong>Products</strong>
                    <span class="tools pull-right">
                        <a class="icon-chevron-down" href="javascript:;"></a>
                        <a class="icon-remove" href="javascript:;"></a>
                    </span>
                </header>
                <div class="panel-body">
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>Product</th>
                            <th>Quantity</th>
                            <th>Price</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for line in purchaseLines %}
                            <tr>
                                <td>{{ line.product }}</td>
                                <td>{{ line.quantity }}</td>
                                <td>{{ line.price }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <div class="well-sm">
                    {% if purchase.status %}
                        <a href="{{ path('purchase_de_finalize', { 'id' : purchase.id }) }}" class="btn btn-danger">De-Finalize this record</a>
                    {% else %}
                        <a href="{{ path('purchase_finalize', { 'id' : purchase.id }) }}" class="btn btn-success finalize">Finalize this record</a>
                    {% endif %}
                </div>
            </section>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <span class="pull-right">
                <a class="btn btn-primary" href="{{ path('purchase') }}">
                    Back
                </a>
            </span>
        </div>
    </div>
{% endblock %}
