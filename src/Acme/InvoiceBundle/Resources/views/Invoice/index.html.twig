{% extends '::base.html.twig' %}

{% block title %}Invoice{% endblock %}

{% block body -%}
<div class="row">
        <div class="col-lg-12">
            <ul class="breadcrumb">
                <li><a href="{{ path('dashboard') }}"><i class="icon-home"></i> Dashboard</a></li>
                <li class="active">Invoice</li>
                <ul class="pull-right">
                    <a class="btn btn-sm btn-primary my-add" href="{{ path('invoice_new') }}">
                        Add <i class="icon-plus"></i>
                    </a>
                </ul>
            </ul>
        </div>
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <strong>Invoice list</strong>
                <span class="tools pull-right">
                    <a class="icon-chevron-down" href="javascript:;"></a>
                    <a class="icon-remove" href="javascript:;"></a>
                </span>
            </header>
            <div class="panel-body">
                {{ include('AcmeInvoiceBundle:Invoice:list.html.twig', {'entities':entities}) }}
            </div>
        </section>
        <div class="add-task-row">
            {% if entities.haveToPaginate %}
                <span class="pull-left" style="margin-top: 20px">
                    <strong>{{ entities.NbResults }}</strong>
                    {{ 'invoice has found'|trans }}.
                    {{ 'Page'|trans }} <strong>{{ entities.CurrentPage }}/{{ entities.NbPages }} </strong>
                </span>
                <span class="pull-right">
                    {{ pagerfanta(entities, 'twitter_bootstrap3_translated') }}
                </span>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}