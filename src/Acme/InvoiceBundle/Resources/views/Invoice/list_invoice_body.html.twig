{% for entity in entities %}
    <tr>
        <td><a href="{{ path('invoice_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
        <td>{% if entity.invoiceDate %}{{ entity.invoiceDate|date('d-M-Y') }}{% endif %}</td>
        <td>{{ entity.name }}</td>
        <td>{% if entity.invoiceStatus == "paid" %}
                <button data-toggle="button" class="btn btn-white"><i class="icon-ok"></i></button>
            {% else %}
                <button data-toggle="button" class="btn btn-white"><i class="icon-warning-sign"></i></button>
            {% endif %}
        </td>
        <td>{{ entity.createdBy }}</td>
        <td><a href="{{ path('invoice_more_details', {'id': entity.id}) }}" data-toggle="modal" class="ajax-modal">more details...</a></td>
        <td>
            <a href="{{ path('invoice_edit', { 'id': entity.id }) }}"
               class="btn btn-info btn-xs"><i class="icon-pencil"></i></a>
            <a href="{{ path('invoice_delete', { 'id': entity.id }) }}"
               class="btn btn-danger btn-xs delete-confirm"><i class="icon-trash"></i></a>
        </td>
    </tr>
{% endfor %}