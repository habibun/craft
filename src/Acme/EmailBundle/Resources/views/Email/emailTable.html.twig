<table class="table table-striped table-bordered table-advance tablesorter">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Created At</th>
        <th>Created By</th>
        <th>Status</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for entity in emailEntities %}
        <tr>
            <td><a href="{{ path('email_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.email|join(' , ')|replace({'@eongroup.net.bd':'','.':' '|capitalize})|title }}</td>
            <td>{{ entity.email }}</td>
            <td>{% if entity.createdAt %}{{ entity.createdAt|date('d-M-Y H:i:s') }}{% endif %}</td>
            <td>{{ entity.createdBy }}</td>
            <td>{% if entity.status == true %}
                    <span class="label label-inverse label-mini">Enabled</span>
                {% else %}
                    <span class="label label-warning label-mini">Disabled</span>
                {% endif %}</td>
            <td>
                <a href="{{ path('email_show', { 'id': entity.id }) }}" data-toggle="modal"
                   class="btn btn-success btn-xs ajax-modal"><i class="icon-zoom-in"></i></a>
                <a href="{{ path('email_edit', { 'id': entity.id }) }}" data-toggle="modal"
                   class="btn btn-info btn-xs ajax-modal"><i class="icon-pencil"></i></a>
                <a href="{{ path('email_delete', { 'id': entity.id }) }}"
                   class="btn btn-danger btn-xs" onclick="return confirm('Are you sure ?')"><i class="icon-trash"></i></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>