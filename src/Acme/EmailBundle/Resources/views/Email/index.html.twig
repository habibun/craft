{% extends '::base.html.twig' %}

{% block title %}Email{% endblock %}

{% block stylesheets %}
    {{ form_stylesheet(searchForm) }}
    <style type="text/css">
        .breadcrumb > li + li.pull-right:last-child:before {
            content: "";
        }
        {# add default btn-default class #}
        .btn-default {
            color: #333333;
            background-color: #ffffff;
            border-color: #cccccc;
        }
    </style>
{% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-lg-6">
            <!--breadcrumbs start -->
            <ul class="breadcrumb">
                <li><a href="{{ path('dashboard') }}"><i class="icon-home"></i> Dashboard</a></li>
                <li class="active">Email</li>
            </ul>
            <!--breadcrumbs end -->
        </div>
        <div class="col-lg-3">
            <form class="row" action="{{ path('user_find_username') }}" id="form" method="post" accept-charset="UTF-8"
                  role="search">
                <div class="input-group">
                    {{ form_widget(searchForm.email,{'attr': {'class': 'ui-autocomplete-input pure-input-rounded','value':'Search here...','id': 'email'}}) }}
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="icon-search"></i>
                            </button>
                        </span>
                </div>
            </form>
        </div>
        <div class="col-lg-3">
            <!--breadcrumbs start -->
            <ul class="breadcrumb">
                <li class="active">
                    <li class="pull-right">
                        <a class="btn btn-sm btn-primary my-add-plus" href="{{ path('email_new') }}">
                            Add <i class="icon-plus"></i>
                        </a>
                    </li>
                </li>
            </ul>
            <!--breadcrumbs end -->
        </div>
    </div>

<!-- page start-->
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <strong>Email list</strong>
                <span class="tools pull-right">
                    <a class="icon-chevron-down" href="javascript:;"></a>
                    <a class="icon-remove" href="javascript:;"></a>
                </span>                
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Created At</th>
                        <th>Created By</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td><a href="{{ path('email_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td>{{ entity.email }}</td>
                            <td>{{ entity.email }}</td>
                            <td>{% if entity.createdAt %}{{ entity.createdAt|date('d-M-Y H:i:s') }}{% endif %}</td>
                            <td>{{ entity.createdBy }}</td>
                            <td>{% if entity.status == true %}
                                        <span class="label label-inverse label-mini">Enabled</span>
                                    {% else %}
                                        <span class="label label-warning label-mini">Disabled</span>
                                    {% endif %}</td>
                            <td>
                                <a href="{{ path('email_show', { 'id': entity.id }) }}"
                                   class="btn btn-success btn-xs"><i class="icon-zoom-in"></i></a>
                                <a href="{{ path('email_edit', { 'id': entity.id }) }}"
                                   class="btn btn-info btn-xs"><i class="icon-pencil"></i></a>
                                <a href="{{ path('email_delete', { 'id': entity.id }) }}"
                                   class="btn btn-danger btn-xs delete-confirm"><i class="icon-trash"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </section>
    </div>
</div>    
{% endblock %}

{% block javascripts %}
    {{ form_javascript(searchForm) }}
        <script type="text/javascript">
            $(document).ready(function () {
                $('#acme_dashbundle_search_email').focus(function (evt) {
                    if ($(this).val() == 'Search here...')
                        $(this).val('');
                });
                $('#acme_dashbundle_search_email').blur(function (evt) {
                    if ($(this).val() == '')
                        $(this).val('Search here...');
                });
            });
    </script>
{% endblock %}