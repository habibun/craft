{% extends '::base.html.twig' %}

{% block title %}email{% endblock title %}

{% block stylesheets %}{% endblock %}

{% block body %}

    {% if filter is defined %}
        <div class="alert alert-success fade in">
            <button data-dismiss="alert" class="close close-sm" type="button">
                <i class="icon-remove"></i>
            </button>
            <p>
                Filtered by: <strong>{{ filter }}</strong>
                &nbsp;&nbsp;&nbsp; {{ entities.NbResults }} email's has found
            </p>
        </div>
    {% endif %}

    <div class="row">
        <div class="col-lg-12">
            <!--breadcrumbs start -->
            <ul class="breadcrumb">
                <li><a href="{{ path('dashboard') }}"><i class="icon-home"></i> Dashboard</a></li>
                <li class="active">Email</li>
            </ul>
            <!--breadcrumbs end -->
        </div>
    </div>

    <!-- page start-->
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <strong>Search Results</strong>
                <span class="tools pull-right">
                    <a class="icon-chevron-down" href="javascript:;"></a>
                    <a class="icon-remove" href="javascript:;"></a>
                </span>
                </header>
                <table class="table table-striped table-advance table-hover">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Created At</th>
                        <th>Created By</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td><a href="{{ path('email_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td>{{ entity.email|join(' , ')|replace({'@eongroup.net.bd':'','.':' '|capitalize})|title }}</td>
                            <td>{{ entity.email }}</td>
                            <td>{% if entity.createdAt %}{{ entity.createdAt|date('d-M-Y H:i:s') }}{% endif %}</td>
                            <td>{{ entity.createdBy }}</td>
                            <td>{% if entity.status == true %}
                                    <span class="label label-inverse label-mini">Enabled</span>
                                {% else %}
                                    <span class="label label-warning label-mini">Disabled</span>
                                {% endif %}</td>
                            <td>
                                <a href="{{ path('email_show', { 'id': entity.id }) }}"
                                   class="btn btn-success btn-xs"><i class="icon-zoom-in"></i></a>
                                <a href="{{ path('email_edit', { 'id': entity.id }) }}"
                                   class="btn btn-info btn-xs"><i class="icon-pencil"></i></a>
                                <a href="{{ path('email_delete', { 'id': entity.id }) }}"
                                   class="btn btn-danger btn-xs delete-confirm"><i class="icon-trash"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </section>
            <div class="text-center">
                <span>
                    {% if entities.haveToPaginate %}
                        {{ pagerfanta(entities, 'twitter_bootstrap3_translated') }}
                    {% endif %}
                </span>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}{% endblock %}
