{% extends '::base.html.twig' %}

{% block title %}Search{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <!--breadcrumbs start -->
            <ul class="breadcrumb">
                <li><a href="{{ path('dashboard') }}"><i class="icon-home"></i> Dashboard</a></li>
                <li class="active">Search-Results</li>
            </ul>
            <!--breadcrumbs end -->
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    search completed &nbsp; Â» &nbsp;<strong>{{ search }}</strong>
                <span class="tools pull-right">
                <a class="icon-chevron-down" href="javascript:;"></a>
                <a class="icon-remove" href="javascript:;"></a>
            </span>
                </header>
                <div class="panel-body">
                    {% if result.PurchaseLines is not empty %}
                        {% include 'AcmeWidgetBundle:SearchStatistics:_productResult.html.twig' %}
                    {% endif %}

                    {% if result.issueLines is not empty %}
                        {% include 'AcmeWidgetBundle:SearchStatistics:_personResult.html.twig' %}
                    {% endif %}
                    <div class="text-center">
                        <ul class="pagination">
                            {{ knp_pagination_render(result) }}
                        </ul>
                    </div>
                    {% if result.PurchaseLines is empty and result.issueLines is empty %}
                        <p>There are no results</p>
                    {% endif %}
                </div>
            </section>
        </div>
    </div>
{% endblock %}