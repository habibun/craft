{% extends '::base.html.twig' %}

{% block title %}Search{% endblock %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <!--breadcrumbs start -->
            <ul class="breadcrumb">
                <li><a href="{{ path('dashboard') }}"><i class="icon-home"></i> Dashboard</a></li>
                <li class="active">Search</li>
                <li class="active">Results</li>
            </ul>
            <!--breadcrumbs end -->
        </div>
    </div>

    <!--mail inbox start-->
    <div class="mail-box">
        <aside class="lg-side">
            <div class="inbox-body">
                {% if result.PurchaseLines is not empty %}
                    {% include 'AcmeWidgetBundle:SearchStatistics:_productResult.html.twig' %}
                {% endif %}
                {% if result.issueLines is not empty %}
                    {% include 'AcmeWidgetBundle:SearchStatistics:_issueResult.html.twig' %}
                {% endif %}
                <div class="text-center">
                    <ul class="pagination">
                        {{ knp_pagination_render(result) }}
                    </ul>
                </div>
                {% if result.PurchaseLines is empty and result.issueLines is empty %}
                    <p>There are no results</p>
                {% endif %}
            </div>
        </aside>
    </div>
    <!--mail inbox end-->
{% endblock %}