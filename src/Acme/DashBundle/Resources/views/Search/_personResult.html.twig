{% if result.issueLines is not empty %}
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Person Name</th>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Issue Date</th>
        </tr>
        </thead>
        <tbody>
        {% for item in result.issueLines %}
            <tr>
                <td><strong>{{ item.issueTo }}</strong></td>
                <td>{{ (item.name) }}</td>
                <td>{{ (item.quantity)|number_format(2) }}</td>
                <td>{{ item.issueDate|date('Y-m-d') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="text-center">
        <ul class="pagination">
            {{ knp_pagination_render(result) }}
        </ul>
    </div>
{% endif %}