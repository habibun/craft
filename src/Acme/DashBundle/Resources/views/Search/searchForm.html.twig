<div class="row">
    <div class="col-xs-12 col-sm-6">
        <section class="panel">
            <!-- big search ================================================================-->
            <div class="well well-lg">
                <!-- Panel -->
                <div class="panel search-panel">
                    <!-- Search form -->
                    <form autocomplete="on" class="search-form bg-primary" action="{{ path('general_search') }}"
                          method="GET"
                          id="search-form">
                        <div class="input-group input-group-lg">
                            <span class="input-group-addon no-background"><i class="icon-search"></i></span>
                            <input type="text" placeholder="Type your search here..." class="form-control"
                                   name="search-keyword"
                                   id="search-input">
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-default">Search</button>
                    </span>
                        </div>
                        <!-- / .input-group -->
                    </form>
                    <!-- / Search form -->
                </div>
            </div>
            <!-- End big search ================================================================-->
        </section>
    </div>
</div>


<script src="{{ asset('js/jquery.js') }}"></script>
<script type="text/javascript">
    $(function () {
        //remove default value
        $('#search-input').focus(function (evt) {
            if ($(this).val() == '{{"Search"}}...')
                $(this).val('');
        });

        //add default value
        $('#search-input').blur(function (evt) {
            if ($(this).val() == '')
                $(this).val('{{"Search"}}...');
        });

        //form submit functionality
        $('#search-form').submit(
                function (evt) {
                    evt.preventDefault();
                    var searchVal = $.trim($('input[type="text"]', $(this)).val());
                    if (searchVal.length > 1) {
                        window.location = $(this).attr('action') + '/' + searchVal;
                    }
                }
        );
    });
</script>
