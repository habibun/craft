<div class="row">
    <div class="col-xs-12 col-sm-8">

        <!-- big search ================================================================-->
        <div class="well row">
            {#<h1><i class="fa fa-search page-header-icon"></i>&nbsp;&nbsp;Search results</h1>#}

            <!-- Tabs -->
            <div class="search-tabs">
                <ul class="nav nav-tabs">
                    <li class="active">
                        <a data-toggle="tab" href="#search-tabs-all">All <span class="label label-primary">21</span></a>
                    </li>
                </ul>
                <!-- / .nav -->
            </div>
            <!-- / Tabs -->

            <!-- Panel -->
            <div class="panel search-panel">

                <!-- Search form -->
                <form autocomplete="on" class="search-form bg-primary" action="{{ path('general_search') }}" method="GET"
                      id="search-form">
                    <div class="input-group input-group-lg">
                        <span class="input-group-addon no-background"><i class="icon-search"></i></span>
                        <input type="text" placeholder="Type your search here..." class="form-control" name="search-keyword"
                               id="search-input">
                    <span class="input-group-btn">
                        <button type="submit" class="btn">Search</button>
                    </span>
                    </div>
                    <!-- / .input-group -->
                </form>
                <!-- / Search form -->
            </div>
        </div>
        <!-- End big search ================================================================-->
    </div>
</div>


<script src="{{ asset('js/jquery.js') }}"></script>
<script type="text/javascript">
    $(function(){
        //remove default value
        $('#search-input').focus(function(evt){
            if($(this).val() == '{{"Search"}}...')
                $(this).val('');
        });

        //add default value
        $('#search-input').blur(function(evt){
            if($(this).val() == '')
                $(this).val('{{"Search"}}...');
        });

        //form submit functionality
        $('#search-form').submit(
                function(evt){
                    evt.preventDefault();
                    var searchVal = $.trim($('input[type="text"]', $(this)).val());
                    if(searchVal.length > 1) {
                        window.location = $(this).attr('action') + '/' + searchVal;
                    }
                }
        );
    });
</script>
