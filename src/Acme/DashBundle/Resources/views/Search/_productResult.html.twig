{% if result.PurchaseLines is not empty %}
    <table class="table table-hover">
        <thead>
        <tr>
            <th>Product Name</th>
            <th>Price</th>
            <th>Manufacturer</th>
            <th>Quantity</th>
            <th>Purchase Date</th>
        </tr>
        </thead>
        <tbody>
        {% for item in result.PurchaseLines %}
            <tr>
                <td><strong>{{ item.name }}</strong></td>
                <td>{{ (item.price/item.quantity)|number_format(2) }}</td>
                <td>{{ item.manufacturer }}</td>
                <td>{{ 1|number_format(2) }}</td>
                <td>{{ item.purchaseDate|date('Y-m-d') }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="text-center">
        <ul class="pagination">
            {{ knp_pagination_render(result) }}
        </ul>
    </div>
{% endif %}