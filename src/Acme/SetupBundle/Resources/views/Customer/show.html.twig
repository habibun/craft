{% extends '::base.html.twig' %}

{% block title %}Customer{% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-lg-12">
            <ul class="breadcrumb">
                <li><a href="{{ path('dashboard') }}"><i class="icon-home"></i> Dashboard</a></li>
                <li class="active">Setup</li>
                <li class="active"><a href="{{ path('customer') }}">Customer</a></li>
                <li class="active">Customer details</li>
                <ul class="pull-right my-add">
                    <a class="btn btn-sm btn-success" href="{{ path('customer_new') }}">
                        <i class="icon-plus"></i>
                    </a>
                    <a class="btn btn-sm btn-info" href="{{ path('customer_edit', {'id' : entity.id}) }}">
                        <i class="icon-pencil"></i>
                    </a>
                    <a class="btn btn-sm btn-danger btn-delete delete-confirm"
                       href="{{ path('customer_delete', {'id' : entity.id}) }}">
                        <i class="icon-trash"></i>
                    </a>
                </ul>
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <strong>Customer #{{ entity.id }}</strong>
                <span class="tools pull-right">
                    <a class="icon-chevron-down" href="javascript:;"></a>
                    <a class="icon-remove" href="javascript:;"></a>
                </span>
                </header>
                <table class="table table-striped">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ entity.name }}</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>{{ entity.address }}</td>
                    </tr>
                    <tr>
                        <th>Created at</th>
                        <td>{{ entity.createdAt|date('d/m/Y H:i:s') }}</td>
                    </tr>
                    <tr>
                        <th>Created by</th>
                        <td>{{ entity.createdBy }}</td>
                    </tr>
                    </tbody>
                </table>
            </section>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
        <span class="pull-right">
            <a href="{{ path('customer') }}" class="btn btn-primary">
                Back
            </a>
        </span>
        </div>
    </div>
{% endblock %}
