{% extends '::base.html.twig' %}

{% block title %}Supplier{% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-lg-12">
            <div>
                <a class="btn btn-sm btn-success" href="{{ path('supplier_new') }}">
                    <i class="icon-plus"></i>
                </a>
                <a class="btn btn-sm btn-info" href="{{ path('supplier_edit', {'id' : entity.id}) }}">
                    <i class="icon-pencil"></i>
                </a>
                <a class="btn btn-sm btn-danger btn-delete delete-confirm"
                   href="{{ path('supplier_delete', {'id' : entity.id}) }}">
                    <i class="icon-trash"></i>
                </a>
            </div>
            <br/>
            <section class="panel">
                <header class="panel-heading">
                    <strong>Supplier #{{ entity.id }}</strong>
                <span class="tools pull-right">
                    <a class="icon-chevron-down" href="javascript:;"></a>
                    <a class="icon-remove" href="javascript:;"></a>
                </span>
                </header>
                <table class="table table-hover table-striped">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ entity.name }}</td>
                    </tr>
                    <tr>
                        <th>Address</th>
                        <td>{{ entity.address }}</td>
                    </tr>
                    </tbody>
                </table>
            </section>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
        <span class="pull-right">
            <a href="{{ path('supplier') }}" class="btn btn-primary">
                Back
            </a>
        </span>
        </div>
    </div>
{% endblock %}
