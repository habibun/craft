<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button aria-hidden="true" data-dismiss="modal" class="close" type="button">Ã—</button>
            <h4 class="modal-title">Edit Product</h4>
        </div>
        <div class="modal-body">
            {{ form_start(edit_form, {'method':'post','role':'form','enctype':'multipart/form-data','attr':{'class':'form-group' }}
            ) }}
            {{ form_errors(edit_form) }}
            <div class="form-group">
                {{ form_label(edit_form.file,"Name :" ,{'label_attr': { 'class':'control-label' }} ) }}
                {{ form_errors(edit_form.name) }}
                {{ form_widget(edit_form.name, {'attr': {'placeholder':'Enter name', 'class':'form-control' }} ) }}
            </div>
            <div class="form-group">
                {{ form_label(edit_form.file,"Image :" ,{'label_attr': { 'class':'control-label' }} ) }}
                {{ form_errors(edit_form.file) }}
                {{ form_widget(edit_form.file, {'attr': {'class':'form-control' }} ) }}
            </div>
            <div class="modal-footer">
                <div class="col-lg-offset-3 col-lg-10">
                    {{ form_widget(edit_form.submit) }}
                </div>
            </div>
            {{ form_end(edit_form) }}
        </div>
    </div>
</div>
