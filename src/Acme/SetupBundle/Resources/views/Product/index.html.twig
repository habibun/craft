{% extends '::base.html.twig' %}

{% block title %}Product{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" type="text/css" href="/assets/bootstrap-fileupload/bootstrap-fileupload.css" />
<style type="text/css">
.product-image img {
    width: 279px;
    height: 222px;
    position: relative;
}
.hid {
    width: 100%;
    display: inline-block;
    text-align: center;
    position: absolute;
    bottom: -22px;
}
</style>
{% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-lg-12">
            <!--breadcrumbs start -->
            <ul class="breadcrumb">
                <li><a href="{{ path('dashboard') }}"><i class="icon-home"></i> Dashboard</a></li>
                <li class="active">Setup</li>
                <li class="active">Product</li>
                <ul class="pull-right">
                    <a class="btn btn-sm btn-primary my-add" href="#newProduct" data-toggle="modal">
                        Add <i class="icon-plus"></i>
                    </a>
                </ul>
            </ul>
            <!--breadcrumbs end -->
        </div>
    </div>
    <div class="row">
      <div class="col-md-12">
        <section class="panel">
            <header class="panel-heading">
                <strong>Product list</strong>
                <span class="pull-right">
                    {{ knp_pagination_render(entities, "", {}, { "class": "my-pagination pagination-sm" }) }}
                </span>
            </header>
            </section>
            {% include 'AcmeSetupBundle:Product:_modalNew.html.twig' %}
            <div class="row product-list">
                {% for entity in entities %}
                    <div class="col-md-4">
                      <section class="panel">
                          <div class="pro-img-box product-image">
                              <img src="/uploads/product/{{entity.getImage()}}" alt=""/>
                              <hr>
                              <span class="hid" style="background-color:rgba(0, 0, 0, 0.1)">
                                  <a href="{{ path('product_show', { 'id': entity.id }) }}"
                               class="btn btn-success btn-xs"><i class="icon-zoom-in"></i></a>
                            <a href="{{ path('product_edit', { 'id': entity.id }) }}" data-toggle="modal"
                               class="btn btn-info btn-xs"><i class="icon-pencil"></i></a>
                            <a href="{{ path('product_delete', { 'id': entity.id }) }}"
                               class="btn btn-danger btn-xs delete-confirm"><i class="icon-trash"></i></a>
                              </span>
                          </div>
                          <div class="panel-body text-center">
                              <h4>
                                  <a href="#" class="pro-title">
                                      Product Name: {{entity.name}}
                                  </a>
                              </h4>
                              <p class="price">Product Id: {{entity.id}}</p>
                          </div>
                      </section>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
<script type="text/javascript" src="/assets/bootstrap-fileupload/bootstrap-fileupload.js"></script>
