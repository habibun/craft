{% extends '::base.html.twig' %}

{% block title %}Product{% endblock %}

{% block stylesheets %}
<style type="text/css">
.product-image img {
    border: 1px solid #E2E2E2;
    left: 10px;
    width: 279px; 
    height: 222px;
    position: relative;
    top: 10px;
}

.hid {
    background: #fc5959;
    width: 279px;
    display: inline-block;
    text-align: center;
    left: 3%;
    bottom: -10px;
    position: absolute;
}
</style>
{% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-lg-12">
            <!--breadcrumbs start -->
            <ul class="breadcrumb">
                <li><a href="{{ path('dashboard') }}"><i class="icon-home"></i> Dashboard</a></li>
                <li class="active">Setup</li>
                <li class="active">Product</li>
                <ul class="pull-right">
                    <a class="btn btn-sm btn-primary my-add" href="{{ path('product_new') }}">
                        Add <i class="icon-plus"></i>
                    </a>
                </ul>
            </ul>
            <!--breadcrumbs end -->
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
                <header class="panel-heading">
                    <strong>Product list</strong>
                    <span class="tools pull-right">
                        <a class="icon-chevron-down" href="javascript:;"></a>
                        <a class="icon-remove" href="javascript:;"></a>
                    </span>
                </header>
                <div class="row product-list">
                    {% for entity in entities %}
                        <div class="col-md-4">
                          <section class="panel">
                              <div class="pro-img-box product-image">
                                  <img src="/uploads/product/{{entity.getImage()}}" alt=""/>
                                  <span class="hid" style="background-color:rgba(0, 0, 0, 0.3)">
                                      <a href="{{ path('product_show', { 'id': entity.id }) }}"
                                   class="btn btn-success btn-xs"><i class="icon-zoom-in"></i></a>
                                <a href="{{ path('product_edit', { 'id': entity.id }) }}"
                                   class="btn btn-info btn-xs"><i class="icon-pencil"></i></a>
                                <a href="{{ path('product_delete', { 'id': entity.id }) }}"
                                   class="btn btn-danger btn-xs delete-confirm"><i class="icon-trash"></i></a>
                                  </span>
                              </div>
                              <div class="panel-body text-center">
                                  <h4>
                                      <a href="#" class="pro-title">
                                          Product Name: {{entity.name}}
                                      </a>
                                  </h4>
                                  <p class="price">Product Id: {{entity.id}}</p>
                              </div>
                          </section>
                        </div>
                    {% endfor %}
                </div>
                 <span class="pull-right">
                        {{ knp_pagination_render(entities, "", {}, { "prev_label": "Previous", "next_label": "Next", "first_label": "First", "last_label": "Last"}) }}
                </span>
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    <script type="text/javascript">
    $(document).ready(function(){
        $('.hid').hide();
        $('.product-image').bind('mouseenter',function(){
             var jony = $('.hid').show();
            $(this).toggleClass('jony');
        });
        $('.product-image').bind('mouseleave',function(){
             var jony = $('.hid').hide();
            $(this).toggleClass('jony');
        });
    });
    </script>

{% endblock %}