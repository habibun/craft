{% extends '::base.html.twig' %}

{% block title %}Product{% endblock %}

{% block stylesheets %}
    <style type="text/css">
        .product-image img {
            width: 279px;
            height: 222px;
            position: relative;
        }
        .product-image-show img {
            width: 400px;
            height: 222px;
            position: relative;
        }
        .hid {
            width: 100%;
            display: inline-block;
            text-align: center;
            position: absolute;
            bottom: -22px;
            background-color: red;
        }
        .my-pagination {
            margin-right: -14px;
            margin-top: -4px;
        }
        .hidek {
            display: none;
        }
    </style>
{% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-lg-12">
            <!--breadcrumbs start -->
            <ul class="breadcrumb">
                <li><a href="{{ path('dashboard') }}"><i class="icon-home"></i> Dashboard</a></li>
                <li class="active">Setup</li>
                <li class="active">Product</li>
                <ul class="pull-right">
                    <a href="{{ path('product_new') }}" class="btn btn-sm btn-primary my-add ajax-modal"
                       data-toggle="modal">
                        Add <i class="icon-plus"></i>
                    </a>
                </ul>
            </ul>
            <!--breadcrumbs end -->
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <section class="panel">
                <header class="panel-heading">
                    <strong>Product list</strong>
                <span class="pull-right">
                    {{ knp_pagination_render(entities, "", {}, { "class": "my-pagination pagination-sm" }) }}
                </span>
                </header>
            </section>
            <div class="row product-list">
                {% for entity in entities %}
                    <div class="col-md-4">
                        <section class="panel">
                            <div class="pro-img-box product-image">
                                <img src="/uploads/products/{{ entity.getImage() }}" alt=""/>
                                <hr>
                              <span class="hid hidek" style="background-color:rgba(0, 0, 0, 0.1)">
                                    <a href="{{ path('product_show', { 'id': entity.id }) }}"
                                        class="btn btn-success btn-xs"><i class="icon-zoom-in"></i></a>
                                    <a href="{{ path('product_edit', { 'id': entity.id }) }}" data-toggle="modal"
                                        class="btn btn-info btn-xs ajax-modal"><i class="icon-pencil"></i></a>
                                    <a href="{{ path('product_delete', { 'id': entity.id }) }}"
                                        class="btn btn-danger btn-xs delete-confirm"><i class="icon-trash"></i></a>
                              </span>
                            </div>
                            <div class="panel-body">
                                <span class="task-title-sp">Name: {{ entity.name }}</span>
                                <div class="pull-right hidden-phone">
                                    <p class="price"> Id # {{ entity.id }}</p>
                                </div>
                            </div>
                        </section>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        // $('.hid').hide();
        $(document).ready(function () {
            $('.col-md-4').each(function(){
                $(this).hover(function () {
                    // $('.pro-img-box span').show();
                    $('.pro-img-box span').removeClass('hidek');
                    // $(this).removeClass('hidek');
                    // alert('i am a image');
                },
                function () {
                    // $('.pro-img-box span').hide();
                    $('.pro-img-box span').addClass('hidek');
                    // $(this).addClass('hidek');
                });
            });
        });
    </script>
{% endblock %}