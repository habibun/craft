{% extends '::base.html.twig' %}

{% block title %}Report{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('assets/bootstrap-datepicker/css/datepicker.css') }}"/>
    <link rel="stylesheet" type="text/css"
          href="{{ asset('assets/bootstrap-datetimepicker/css/datetimepicker.css') }}"/>
{% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-md-6">
            <section class="panel">
                <header class="panel-heading">
                    <strong>Purchase Report</strong>
                          <span class="tools pull-right">
                            <a href="javascript:;" class="icon-chevron-down"></a>
                            <a href="javascript:;" class="icon-remove"></a>
                        </span>
                </header>
                <div class="panel-body">
                    <form action="{{ path('purchase_report') }}" class="form-horizontal" method="post">

                        <div class="form-group">
                            <label class="control-label col-md-3">From Date</label>

                            <div class="col-lg-8 col-xs-11">
                                <div data-date-format="yyyy-MM-dd" data-date=""
                                     class="input-append date default-date-picker">
                                    <input type="text" size="16" class="form-control" name="report[fromDate]"
                                           id="datepicker"/>
                                      <span class="input-group-btn add-on">
                                        <button class="btn btn-info" type="button"><i class="icon-calendar"></i>
                                        </button>
                                      </span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3">To Date</label>

                            <div class="col-lg-8 col-xs-11">
                                <div data-date-format="yyyy-MM-dd" data-date=""
                                     class="input-append date default-date-picker">
                                    <input type="text" size="16" class="form-control" name="report[toDate]"
                                           id="datepicker"/>
                                      <span class="input-group-btn add-on">
                                        <button class="btn btn-info" type="button"><i class="icon-calendar"></i>
                                        </button>
                                      </span>
                                </div>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <input class="btn btn-primary" type="submit" id="getReport" value="Get Report"/>
                        </div>

                    </form>
                </div>
            </section>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="{{ asset('assets/bootstrap-datepicker/js/bootstrap-datepicker.js') }}"></script>
    <script>
        $('.default-date-picker').datepicker({
            format: 'dd-mm-yyyy'
        });
    </script>
{% endblock %}