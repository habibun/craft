{% extends '::base.html.twig' %}

{% block title %}Report{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-md-6">
            <section class="panel">
                <header class="panel-heading">
                    <strong>Purchase Report</strong>
                          <span class="tools pull-right">
                            <a href="javascript:;" class="icon-chevron-down"></a>
                            <a href="javascript:;" class="icon-remove"></a>
                        </span>
                </header>
                <div class="panel-body">
                    <form action="{{ path('purchase_report') }}" class="form-horizontal" method="post">
                        <div class="form-group">
                            <label for="datepicker" class="col-sm-2 control-label">From Date</label>

                            <div class="col-sm-10">
                                <div class='input-group datetimepicker date'>
                                    <input class='form-control' data-format="yyyy-MM-dd" name="report[fromDate]"
                                           id="datepicker"/>
                                    <span class="input-group-addon add-on">
                                        <i data-time-icon="fa fa-clock-o" data-date-icon="fa fa-calendar"></i>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="datepicker" class="col-sm-2 control-label">To Date</label>

                            <div class="col-sm-10">
                                <div class='input-group datetimepicker date'>
                                    <input class='form-control' data-format="yyyy-MM-dd" name="report[toDate]"
                                           id="datepicker"/>
                                    <span class="input-group-addon add-on">
                                        <i data-time-icon="fa fa-clock-o" data-date-icon="fa fa-calendar"></i>
                                    </span>
                                </div>
                            </div>
                        </div>

                        <div class="modal-footer">
                            <input class="btn btn-primary" type="submit" id="getReport" value="Get Report"/>
                        </div>
                    </form>
                </div>
            </section>
        </div>
    </div>
{% endblock %}

