{% extends '::base.html.twig' %}

{% block body -%}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <div class="panel-title">User list</div>
            </header>
            <table class="table table-striped table-advance table-hover">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Roles</th>
                        <th>Lastlogin</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.username }}</a></td>
                        <td>{{ entity.email }}</td>
                        <td>
                            {% if entity.enabled == true %}
                                <span class="label label-primary label-mini">Enabled</span>
                            {% else %}
                                <span class="label label-warning label-mini">disabled</span>
                            {% endif %}
                        </td>
                        <td>
                            <ul>
                                {% for role in entity.roles %}
                                    <li>{{ role }}</li>
                                {% endfor %}
                            </ul>
                        </td>
                        <td>{% if entity.lastLogin %}{{ entity.lastLogin|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>
                            <a href="{{ path('user_show', { 'id': entity.id }) }}" class="btn btn-success btn-xs"><i class="icon-ok"></i>show</a>
                            <a href="{{ path('user_edit', { 'id': entity.id }) }}" class="btn btn-primary btn-xs"><i class="icon-pencil"></i>edit</a>
                            <a href="{{ path('user_delete', { 'id': entity.id }) }}" class="btn btn-danger btn-xs"><i class="icon-trash"></i>delete</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            <hr>
            <div>
            <a  class="btn btn-info" href="{{ path('user_new') }}"><i class="icon-user"></i>+</a>
            </div>
            <hr>
        </section>
    </div>
</div>
{% endblock %}