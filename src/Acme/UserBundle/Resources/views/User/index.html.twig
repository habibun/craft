{% extends '::base.html.twig' %}

{% block title %}User{% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-lg-12">
            <div>
                <a class="btn btn-sm btn-primary" href="{{ path('user_new') }}">
                    Add <i class="icon-plus"></i>
                </a>
            </div>
            <br/>
            <section class="panel">
                <header class="panel-heading">
                    <strong>User list</strong>
                <span class="tools pull-right">
                    <a class="icon-chevron-down" href="javascript:;"></a>
                    <a class="icon-remove" href="javascript:;"></a>
                </span>
                </header>
                <table class="table table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Roles</th>
                        <th>Lastlogin</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td>{{ entity.id }}</td>
                            <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.username }}</a></td>
                            <td>{{ entity.email }}</td>
                            <td>
                                {% if entity.enabled == true %}
                                    <span class="label label-inverse label-mini">Enabled</span>
                                {% else %}
                                    <span class="label label-warning label-mini">disabled</span>
                                {% endif %}
                            </td>
                            <td>
                                <ul>
                                    {% for role in entity.roles %}
                                        <li>{{ role }}</li>
                                    {% endfor %}
                                </ul>
                            </td>
                            <td>{% if entity.lastLogin %}{{ entity.lastLogin|date('Y-m-d H:i:s') }}{% endif %}</td>
                            <td>
                                <a href="{{ path('user_show', { 'id': entity.id }) }}" class="btn btn-success btn-xs"><i
                                            class="icon-zoom-in"></i></a>
                                <a href="{{ path('user_edit', { 'id': entity.id }) }}" class="btn btn-info btn-xs"><i
                                            class="icon-pencil"></i></a>
                                <a href="{{ path('user_delete', { 'id': entity.id }) }}"
                                   class="btn btn-danger btn-xs delete-confirm"><i class="icon-trash"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </section>
            {{ knp_pagination_render(entities, "", {}, { "style": "pager", "aligned": true }) }}
            {#        <span class="" style="float: left;margin-top: 20px">
                        <a class="btn btn-primary btn-sm" href="{{ path('user_new') }}">
                            Add New
                        </a>
                    </span>#}
        </div>
    </div>
{% endblock %}
