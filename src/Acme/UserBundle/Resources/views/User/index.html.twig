{% extends '::base.html.twig' %}

{% block title %}User{% endblock %}

{% block stylesheets %}
    <style type="text/css">
        {# remove last separator if last or more 
        .breadcrumb > li + li:nth-last-child(1):before {
            content: " ";
        } #}
        .breadcrumb > li + li.pull-right:last-child:before {
            content: "";
        }

        {# add default btn-default class #}
        .btn-default {
            color: #333333;
            background-color: #ffffff;
            border-color: #cccccc;
        }
    </style>
{% endblock %}

{% block body -%}

    {% if filter is defined %}
        <div class="alert alert-success fade in">
            <button data-dismiss="alert" class="close close-sm" type="button">
                <i class="icon-remove"></i>
            </button>
            <p>
                Filtered by: <strong>{{ filter }}</strong>
                &nbsp;&nbsp;&nbsp; {{ entities.NbResults }} user has found
            </p>
        </div>
    {% endif %}

    <div class="row">
        <div class="col-lg-6">
            <!--breadcrumbs start -->
            <ul class="breadcrumb">
                <li><a href="{{ path('dashboard') }}"><i class="icon-home"></i> Dashboard</a></li>
                <li class="active">Admin</li>
                <li class="active">Manage User</li>
                {% if get_action_name() == "findUsername" %}
                    <li><a href="{{ path('user') }}">User</a></li>
                    <li class="active">Search</li>
                        {% else %}
                    <li class="active">User</li>
                {% endif %}
            </ul>
            <!--breadcrumbs end -->
        </div>
        <div class="col-lg-3">
            <form class="row" action="{{ path('user_find_username') }}" id="form" method="post" accept-charset="UTF-8"
                  role="search">
                <div class="input-group">
                    <input type="text" class="form-control" value="Search here..." name="username" size="10"
                           id="username"/>
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="icon-search"></i>
                            </button>
                        </span>
                </div>
            </form>
        </div>
        <div class="col-lg-3">
            <!--breadcrumbs start -->
            <ul class="breadcrumb">
                <li class="active">
                <li class="my-add pull-right">
                    <a class="btn btn-sm btn-primary" href="{{ path('user_new') }}">
                        Add <i class="icon-plus"></i>
                    </a>
                </li>
                </li>
            </ul>
            <!--breadcrumbs end -->
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                {% if get_action_name() == "findUsername" %}
                    <strong>Search Result</strong>
                        {% else %}
                    <strong>User list</strong>
                {% endif %} 
                <span class="tools pull-right">
                    <a class="icon-chevron-down" href="javascript:;"></a>
                    <a class="icon-remove" href="javascript:;"></a>
                </span>
                </header>
                <table class="table table-bordered table-hover">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Image</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Status</th>
                        <th>Created At</th>
                        <th>Created By</th>
                        <th>Roles</th>
                        <th>Lastlogin</th>
                        <th>Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for entity in entities %}
                        <tr>
                            <td>{{ entity.id }}</td>
                            <td>
                                <img src="
                                    {% if entity.image == true %}
                                        {{ asset(['uploads/users/', entity.getImage()]|join) }}
                                    {% else %}
                                        {{ asset('uploads/users/userDefaultLogo.png') }}
                                    {% endif %}
                                     " width="60px" height="50px" alt=""/>
                            </td>
                            <td><a href="{{ path('user_show', { 'id': entity.id }) }}">{{ entity.username }}</a></td>
                            <td>{{ entity.email }}</td>
                            <td>
                                {% if entity.enabled == true %}
                                    <span class="label label-inverse label-mini">Enabled</span>
                                {% else %}
                                    <span class="label label-warning label-mini">Disabled</span>
                                {% endif %}
                            </td>
                            <td>{{ entity.createdAt|date('d-M-Y H:i:s') }}</td>
                            <td>{{ entity.createdBy }}</td>
                            <td>
                                <ul>
                                    <li>{{ entity.roles|join(' , ')|replace({'ROLE_':'','_':' '|capitalize})|title }}</li>
                                </ul>
                            </td>
                            <td>{% if entity.lastLogin %}{{ entity.lastLogin|time_ago_in_words }}{% endif %}</td>
                            <td>
                                <a href="{{ path('user_show', { 'id': entity.id }) }}"
                                   class="btn btn-success btn-xs"><i class="icon-zoom-in"></i></a>
                                <a href="{{ path('user_edit', { 'id': entity.id }) }}"
                                   class="btn btn-info btn-xs"><i class="icon-pencil"></i></a>
                                <a href="{{ path('user_delete', { 'id': entity.id }) }}"
                                   class="btn btn-danger btn-xs delete-confirm"><i class="icon-trash"></i></a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </section>
            {#<div class="text-center">
                <span>
                    {% if entities.haveToPaginate %}
                        {{ pagerfanta(entities, 'twitter_bootstrap3_translated') }}
                    {% endif %}
                </span>
            </div>#}

            <div class="add-task-row">
                {% if entities.haveToPaginate %}
                    <span class="pull-left">
                        <strong>{{entities.NbResults}}</strong>
                        {{ 'guests has found'|trans }}.
                        {{ 'Page'|trans }} <strong>{{entities.CurrentPage}}/{{entities.NbPages}} </strong>
                    </span>
                    <span class="pull-right">
                        {{ pagerfanta(entities, 'twitter_bootstrap3_translated') }}
                    </span>
                {% endif %}
            </div>


        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#username').focus(function (evt) {
                if ($(this).val() == 'Search here...')
                    $(this).val('');
            });
            $('#username').blur(function (evt) {
                if ($(this).val() == '')
                    $(this).val('Search here...');
            });
        });
    </script>
{% endblock %}