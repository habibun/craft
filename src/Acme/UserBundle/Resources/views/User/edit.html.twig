{% extends '::base.html.twig' %}

{% block title %}User{% endblock %}

{% block body -%}
    <div class="row">
        <div class="col-lg-12">
            <!--breadcrumbs start -->
            <ul class="breadcrumb">
                <li><a href="{{ path('dashboard') }}"><i class="icon-home"></i> Dashboard</a></li>
                <li class="active">Admin</li>
                <li class="active">Manage User</li>
                <li class="active"><a href="{{ path('user') }}">User</a></li>
                <li class="active">Edit A User</li>
            </ul>
            <!--breadcrumbs end -->
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                <header class="panel-heading">
                    <strong>Edit User</strong>
                <span class="tools pull-right">
                    <a class="icon-chevron-down" href="javascript:;"></a>
                    <a class="icon-remove" href="javascript:;"></a>
                </span>
                </header>
                <div class="panel-body">
                    {{ bootstrap_set_style('horizontal') }}
                    {{ form_start(edit_form, {'attr' :  { 'class': 'form-horizontal' }} ) }}
                    {{ form_row(edit_form.username) }}
                    {{ form_row(edit_form.email) }}
                    {{ form_row(edit_form.password) }}
                    <div class="row form-group">
                        {{ form_label(edit_form.enabled , 'Enabled' , {'label_attr': { 'class':'col-sm-3 control-label'} } ) }}
                        <div class="col-sm-6">
                            {{ form_widget(edit_form.enabled, {'attr': { 'class':' '} } ) }}
                        </div>
                        {{ form_errors(edit_form.enabled) }}
                    </div>
                    {{ form_row(edit_form.roles) }}
                    <hr>
            <span class="pull-right">
                <a href="{{ path('user') }}" class="btn btn-primary">Back</a>
            </span>
                    {{ form_widget(edit_form.submit) }}
                    {{ form_end(edit_form) }}
                </div>
            </section>
        </div>
    </div>
{% endblock %}
