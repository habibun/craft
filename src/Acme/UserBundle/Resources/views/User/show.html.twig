{% extends '::base.html.twig' %}
{% block title %}User{% endblock %}
{% block body -%}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                <h3 class="panel-title">{{ entity.username|capitalize }}'s Details</h3>
            </header>
            <table class="table table-striped table-advance table-hover">
                <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ entity.id }}</td>
                    </tr>
                    <tr>
                        <th>Username</th>
                        <td>{{ entity.username }}</td>
                    </tr>
                    <tr>
                        <th>Email</th>
                        <td>{{ entity.email }}</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>{% if entity.enabled == true %}
                                <span class="label label-success">Enabled</span>
                            {% else %}
                                <span class="label label-warning">disabled</span>
                            {% endif %}
                        </td>
                    </tr>
                    <tr>
                        <th>Roles</th>
                        <td>
                            <ul>
                                {% for role in entity.roles %}
                                    <li>{{ role }}</li>
                                {% endfor %}
                            </ul>
                        </td>
                    </tr>
                </tbody>
            </table>
        </section>
    </div>
</div>
        <div>
            <a href="{{ path('user_edit', { 'id': entity.id }) }}" class="btn btn-primary">
                Edit
            </a>
            <span class="pull-right">
                <a href="{{ path('user') }}" class="btn btn-primary">
                    Back
                </a>
            </span>
            {#<span>{{ form(delete_form) }}</span>#}
        </div>
{% endblock %}
