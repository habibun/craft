{% trans_default_domain 'AcmeUserBundle' %}




<!-- page start-->
              <div class="row">
                  <aside class="profile-nav col-lg-3">
                      <section class="panel">
                          <div class="user-heading round">
                              <a href="#">
                                  <img src="
                                    {% if app.user.getImage() != "userDefaultLogo.png" %}
                                        {{ asset(['uploads/users/', app.user.getImage()]|join) }}
                                    {% else %}
                                        {{ asset('uploads/users/userDefaultLogoBlack.png') }}
                                    {% endif %}
                                     " width="140px" height="140px" alt=""/>
                              </a>
                              {#<h1>{{ user.username }}</h1>
                              <p>{{ user.email }}</p>#}
                          </div>

                          <ul class="nav nav-pills nav-stacked">
                              <li><a href="{{ path('fos_user_profile_show') }}"> <i class="icon-user"></i> Profile</a></li>
                              <li class="active"><a href="{{ path('fos_user_profile_edit') }}"> <i class="icon-edit"></i> Edit profile</a></li>
                          </ul>

                      </section>
                  </aside>
                  <aside class="profile-info col-lg-9">
                      <section class="panel">
                          <form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
    {{ form_widget(form) }}
    <div>
        <input type="submit" value="{{ 'profile.edit.submit'|trans }}" />
    </div>
</form>
                      </section>
                  </aside>
              </div>

              <!-- page end-->